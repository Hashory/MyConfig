{
  // ==========================================
  // General Editor Settings
  // ==========================================
  // "editor.fontFamily": "'Google Sans Code light', 'JetBrains mono', Consolas, 'Courier New', monospace",
  "editor.fontFamily": "'Google Sans Code light', monospace",
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.lineHeight": 23,
  "editor.minimap.enabled": false,
  "editor.accessibilitySupport": "off",
  "editor.inlineSuggest.enabled": true,
  "editor.aiStats.enabled": true,

  // ==========================================
  // Workbench & UI Settings
  // ==========================================
  "workbench.activityBar.location": "top",
  "workbench.editor.empty.hint": "hidden",
  "workbench.secondarySideBar.defaultVisibility": "visible",
  "workbench.experimental.share.enabled": true,
  "debug.console.fontSize": 13,
  "remote.autoForwardPortsSource": "hybrid",

  // ==========================================
  // File Management
  // ==========================================
  "files.autoSave": "onWindowChange",
  "files.eol": "\n",
  "files.associations": {
    "*.jjdescription": "git-commit",
    "COMMIT_EDITMSG": "git-commit"
  },
  "json.schemaDownload.enable": true,

  // ==========================================
  // Network & Proxy
  // ==========================================
  "http.proxyStrictSSL": false,
  "http.proxySupport": "on",

  // ==========================================
  // Terminal
  // ==========================================
  "terminal.integrated.fontLigatures": true,
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.suggest.enabled": true,

  // ==========================================
  // Git & Version Control
  // ==========================================
  "git.autofetch": true,
  "git.ignoreRebaseWarning": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.codeLens": true,
  "githubPullRequests.pullBranch": "never",
  "githubPullRequests.experimental.useQuickChat": true,

  // ==========================================
  // AI Tools, Chat, & Copilot
  // ==========================================
  "chat.agent.maxRequests": 365,
  "chat.agent.thinkingStyle": "collapsedPreview",
  "chat.emptyState.history.enabled": true,
  "chat.agentSessionsViewLocation": "view",
  "chat.useNestedAgentsMdFiles": true,
  "chat.math.enabled": true,
  "chat.todoListTool.enabled": true,
  "chat.edits2.enabled": true,
  "chat.mcp.autostart": "newAndOutdated",
  "chat.mcp.serverSampling": {
    "Cursor (Global): playwright": {
      "allowedModels": [
        "github.copilot-chat/claude-3.5-sonnet",
        "github.copilot-chat/claude-3.7-sonnet",
        "github.copilot-chat/claude-3.7-sonnet-thought",
        "github.copilot-chat/claude-sonnet-4",
        "github.copilot-chat/gemini-2.0-flash-001",
        "github.copilot-chat/gemini-2.5-pro",
        "github.copilot-chat/gpt-4.1",
        "github.copilot-chat/gpt-4o",
        "github.copilot-chat/o3-mini",
        "github.copilot-chat/o4-mini"
      ]
    }
  },
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "github.copilot.selectedCompletionModel": "",
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.languageContext.typescript.enabled": true,
  "github.copilot.chat.languageContext.fix.typescript.enabled": true,
  "github.copilot.chat.languageContext.inline.typescript.enabled": true,
  "github.copilot.chat.languageContext.typescript.cacheTimeout": 1000,
  "github.copilot.chat.completionContext.typescript.mode": "on",
  "github.copilot.chat.notebook.followCellExecution.enabled": true,
  "github.copilot.chat.generateTests.codeLens": true,
  "github.copilot.chat.newWorkspace.useContext7": true,
  "inlineChat.enableV2": true,
  "inlineChat.notebookAgent": true,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4o",
  "geminicodeassist.project": "utopian-airport-fkd70",
  "roo-cline.allowedCommands": [
    "npm test",
    "npm install",
    "tsc",
    "git log",
    "git diff",
    "git show"
  ],
  "roo-cline.deniedCommands": [],

  // ==========================================
  // Extensions & General Language Settings
  // ==========================================
  "vscodeGoogleTranslate.preferredLanguage": "English",
  "accessibility.voice.speechLanguage": "ja-JP",
  "redhat.telemetry.enabled": true,

  // --- Python --- //
  "python.defaultInterpreterPath": "c:\\Users\\hayabusa\\AppData\\Local\\Programs\\Python\\Python312\\python.exe",
  "python.terminal.shellIntegration.enabled": true,
  "python.analysis.supportAllPythonDocuments": true,
  "python.analysis.ignore": [
    "*"
  ],
  "ruff.organizeImports": true,
  "ruff.fixAll": true,
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "source.organizeImports": "always"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "diffEditor.ignoreTrimWhitespace": true
  },

  // --- Dart & Flutter --- //
  "dart.flutterSdkPath": "C:\\Users\\hayabusa\\flutter",
  "dart.openDevTools": "flutter",
  // Enable the experiment
  "dart.experimentalSidebarDevTools": true,
  // Customise which sections are shown in the sidebar, in an editor tab, or external browser.
  "dart.devToolsLocation": {
    "inspector": "sidebar", // Embed the inspector in sidebar
    "cpu-profiler": "external", // Open the CPU profiler in external browser
    "default": "beside" // Default other tabs to an editor tab beside the current code editor
  },
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [
      80
    ],
    "editor.selectionHighlight": false,
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },

  // --- C/C++, CMake & Clangd --- //
  "makefile.configureOnOpen": true,
  "cmake.useVsDeveloperEnvironment": "always",
  "cmake.outputLogEncoding": "utf-8",
  "cmake.configureOnEdit": false,
  "cmake.configureOnOpen": false,
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "clangd.path": "c:\\Users\\hayabusa\\AppData\\Roaming\\Antigravity\\User\\globalStorage\\llvm-vs-code-extensions.vscode-clangd\\install\\21.1.0\\clangd_21.1.0\\bin\\clangd.exe",
  "clangd.arguments": [
    "--experimental-modules-support"
  ],

  // --- Web & Markup (Svelte, Markdown, HTML, Docker) --- //
  "svelte.enable-ts-plugin": true,
  "markdown.marp.mathTypesetting": "katex",
  "markdown.marp.pptx.editable": "on",
  "[markdown]": {
    // "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "docker.extension.enableComposeLanguageServer": false,
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },

  // --- Environment & Runtime (Deno, Zig, Qt) --- //
  "deno.enable": false,
  "zig.path": "zig",
  "zig.zls.path": "zls",
  "qt-core.qtInstallationRoot": "c:\\Qt",

  // ==========================================
  // Formatting Overrides
  // ==========================================
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome",
    // "editor.defaultFormatter": "esbenp.prettier-vscode",
    // "editor.defaultFormatter": "oxc.oxc",
    // "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome",
    // "editor.defaultFormatter": "esbenp.prettier-vscode",
    // "editor.defaultFormatter": "oxc.oxc",
    // "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    // "editor.defaultFormatter": "esbenp.prettier-vscode",
    // "editor.defaultFormatter": "oxc.oxc",
    // "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    // "editor.defaultFormatter": "esbenp.prettier-vscode",
    // "editor.defaultFormatter": "oxc.oxc",
    // "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    // "editor.defaultFormatter": "esbenp.prettier-vscode",
    // "editor.defaultFormatter": "oxc.oxc",
    // "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    // "editor.defaultFormatter": "esbenp.prettier-vscode",
    // "editor.defaultFormatter": "oxc.oxc",
    // "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "biomejs.biome",
    // "editor.defaultFormatter": "esbenp.prettier-vscode",
    // "editor.defaultFormatter": "oxc.oxc",
    // "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true
  },
}
